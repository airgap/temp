{
	"name": "@lyku/plumber",
	"extends": ["../_shared/project.json"],
	"tags": [],
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"outputs": ["{options.outputPath}"],
			"options": {
				"command": "bun ibuild.ts apps/plumber/serve.ts dist/apps/plumber"
			}
		},
		"dockerize": {
			"executor": "nx:run-commands",
			"options": {
				"command": "./apps/plumber/dockerize plumber --push"
			}
		},
		"kubernetize": {
			"executor": "nx:run-commands",
			"options": {
				"command": "./apps/plumber/deploy"
			}
		}
	}
}

#! /bin/bash
project=$1
if [ "$project" = "all" ]; then
	nx run-many --target=build --parallel=99 --skip-nx-cache | sed 's/^/ğŸ—ï¸  /' && \
		nx run-many --target=dockerize --parallel=1 | sed 's/^/ğŸ³  /' && \
		doppler run -- nx run-many --target=kubernetize --parallel=99 | sed 's/^/ğŸš€  /'
	exit 0
fi

if [ -z "$project" ]; then
	echo "Usage: $0 <project>"
	exit 1
fi

nx build @lyku/$project | sed 's/^/ğŸ—ï¸  /' && \
	nx dockerize @lyku/$project | sed 's/^/ğŸ³  /' && \
	doppler run -- nx kubernetize @lyku/$project | sed 's/^/ğŸš€  /'

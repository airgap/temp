{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/libs/si-bits",
		"declaration": true,
		"types": ["node", "vite/client", "svelte"]
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"],
	"exclude": [
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}

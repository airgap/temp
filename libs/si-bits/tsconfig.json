{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "ESNext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"importHelpers": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noPropertyAccessFromIndexSignature": true,
		"types": ["svelte"],
		"verbatimModuleSyntax": true,
		"target": "ES2023",
		"paths": {
			"@lyku/defaults": ["dist/libs/defaults"],
			"@lyku/strings": ["dist/libs/strings"],
			"@lyku/json-models": ["dist/libs/json-models"],
			"@lyku/phrasebooks": ["dist/libs/phrasebooks"],
			"@lyku/monolith-ts-api": ["dist/libs/monolith-ts-api"],
			"@lyku/mapi-types": ["dist/libs/mapi-types/index.d.ts"],
			"@lyku/stock-docs": ["dist/libs/stock-docs"]
		}
	},
	"files": [],
	"include": ["src"],
	"references": [
		{
			"path": "./tsconfig.lib.json"
		},
		{
			"path": "./tsconfig.spec.json"
		}
	]
}
